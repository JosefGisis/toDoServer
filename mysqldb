-- @block
CREATE TABLE users(
    id INT PRIMARY KEY AUTO_INCREMENT,
    email VARCHAR(255) NOT NULL UNIQUE, 
    username VARCHAR(20) NOT NULL UNIQUE,
    pass_word TEXT NOT NULL,
    creation_date DATE DEFAULT(CURRENT_DATE)
);
INSERT INTO users (
    id,
    email,
    username,
    pass_word,
    creation_date,
    last_modified
  )
VALUES (
    id:int,
    'email:varchar',
    'username:varchar',
    'pass_word:text',
    'creation_date:date',
    'last_modified:date'
  );
-- @block
CREATE TABLE lists(
    id INT AUTO_INCREMENT,
    title VARCHAR(255) NOT NULL,
    list_description TEXT,
    creation_date DATE DEFAULT(CURRENT_DATE), 
    users_id INT, 
    PRIMARY KEY (id),
    FOREIGN KEY (users_id) REFERENCES users(id)
);


-- @block
CREATE TABLE to_dos(
    id INT AUTO_INCREMENT,
    title VARCHAR(255) NOT NULL,
    creation_date DATE DEFAULT(CURRENT_DATE),
    completed BOOLEAN DEFAULT FALSE,
    due_date DATE,
    PRIMARY KEY (id),
    membership INT,
    users_id INT,
    FOREIGN KEY (membership) REFERENCES lists(id),
    FOREIGN KEY (users_id) REFERENCES users(id)
);

-- @block
ALTER TABLE to_dos ALTER COLUMN last_modified DATETIME DEFAULT(CURRENT_DATE);

-- @block
SHOW INDEXES FROM lists WHERE Column_name='title';

-- @block
ALTER TABLE lists DROP COLUMN last_modified;

-- @block
ALTER TABLE lists ADD COLUMN last_modified DATETIME NOT NULL DEFAULT(NOW())